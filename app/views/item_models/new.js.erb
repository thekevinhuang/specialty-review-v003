
var itemModelFormHTML = "<%=j(render partial: 'activities/form', locals: {current_object: @item_model, parent_object: @item_category ||=ItemCategory.new})%>"
$("#item-model-form").html(itemModelFormHTML)

$("form#new_item_model").submit(function(event) {
    event.preventDefault()

    var values =  $(this).serialize()

    var posting = $.post('/item_models', values)

    posting.done(function (data){
        itemModelRefresh()
    })
})