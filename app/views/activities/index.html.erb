<div>
    <h2>Current Existing Activities</h2>
    <ul>
        <div id="activity-list">
        <%@activities.each do |activity|%>
            <li><%=link_to activity.name, activity_path(activity)%></li>
        <%end%>
        </div>
    </ul>

    <div id="activity-form"></div>
    <br>
    <br>
    <button id= "new-activity">Add a new Activity</button>

    <button id= "alpha-sort">Sort your Activities</button>
</div>

